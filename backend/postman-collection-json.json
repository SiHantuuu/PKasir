      "item": [
        {
          "name": "Register Student (Siswa)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"NIS\": \"12345678\",\n  \"NISN\": \"1234567890\",\n  \"username\": \"siswa001\",\n  \"email\": \"siswa001@example.com\",\n  \"Nama\": \"Ahmad Siswa\",\n  \"Gen\": 2024,\n  \"password\": \"password123\",\n  \"PIN\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register/siswa",
              "host": ["{{base_url}}"],
              "path": ["auth", "register", "siswa"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Save JWT Token\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.token) {",
                  "        pm.collectionVariables.set(\"jwt_token\", jsonData.data.token);",
                  "    }",
                  "});",
                  "",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('success');",
                  "    pm.expect(jsonData).to.have.property('message');",
                  "    pm.expect(jsonData).to.have.property('data');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
